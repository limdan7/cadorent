<h1>Listing all rooms</h1>
<p>
  <%= link_to "Created new room", new_room_path%>
</p>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @rooms.each do |room|%>
  <tr>
    <td><%= room.title%></td>
    <td><%= room.description%></td>
    <td><%= link_to 'Edit',edit_room_path(room) %></td>
    <td><%= link_to 'Show',room_path(room) %></td>
    <td><%= link_to 'Delete', room_path(room), method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>
</table>